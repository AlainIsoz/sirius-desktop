<plugin>
   <extension-point id="savedialogextension" name="org.eclipse.sirius.common.ui.savedialogextension" schema="schema/savedialogextension.exsd"/>
   <extension-point id="propertyContributorLabelProviderDelegate" name="org.eclipse.sirius.common.ui.views.properties.tabbed.propertyContributorLabelProviderDelegate" schema="schema/propertyContributorLabelProviderDelegate.exsd"/>
   
   <extension
         point="org.eclipse.ui.views">
      <category
            id="org.eclipse.sirius.common.ui.profiling"
            name="Sirius Profiler">
      </category>
      <view
            category="org.eclipse.sirius.common.ui.profiling"
            class="org.eclipse.sirius.common.ui.tools.api.profiler.view.TimeProfilerView"
            id="org.eclipse.sirius.common.ui.view.timeProfiler"
            name="Time Profiler View">
      </view>
   </extension>
   <extension
       point="org.eclipse.sirius.common.fileModificationValidator">
    <fileModificationValidator
          validationClass="org.eclipse.sirius.common.ui.tools.internal.resource.FileModificationValidator">
    </fileModificationValidator>
   </extension>
   <extension point="org.eclipse.core.runtime.preferences">
      <initializer class="org.eclipse.sirius.common.ui.tools.internal.preference.CommonPreferenceInitializer"/>
   </extension>
    <extension
         point="org.eclipse.sirius.common.proposalProvider">
      <proposalProvider
            class="org.eclipse.sirius.common.ui.tools.internal.interpreter.VariableProposalProvider"
            interpreter="org.eclipse.sirius.common.variableInterpreter">
      </proposalProvider>
      <proposalProvider
            class="org.eclipse.sirius.common.ui.tools.internal.interpreter.FeatureProposalProvider"
            interpreter="org.eclipse.sirius.common.featureInterpreter">
      </proposalProvider>
      <proposalProvider
            class="org.eclipse.sirius.common.ui.tools.internal.interpreter.ServiceProposalProvider"
            interpreter="org.eclipse.sirius.common.serviceInterpreter">
      </proposalProvider>
   </extension>
</plugin>
