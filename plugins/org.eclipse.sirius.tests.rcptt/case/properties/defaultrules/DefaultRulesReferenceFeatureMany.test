------=_.content-0a7243a0-75d3-3d5f-9791-539de0e5b7ac
Content-Type: text/ecl
Entry-Name: .content

// Select the Element1 in the diagram
with [get-editor RootDiagram | get-diagram -index 1 | get-edit-part -name RootDiagram] {
	with [get-edit-part -name Element1 | get-edit-part -className SquareEditPart] {
		mouse-move 41 73 button1 -height 100 -width 100
		mouse-press 41 73 button1 -height 100 -width 100
		mouse-hover 41 73 -height 100 -width 100
		mouse-release 41 73 button1 524288 -height 100 -width 100
	}
}
 
with [get-view Properties | get-section Properties] {
// References attributes are represented thanks to a reference widget (table with 5 buttons)
    with [get-editbox -after [get-label "Test Element Element2"]] {
        get-property className | equals "org.eclipse.swt.custom.StyledText" | verify-true
        get-property text | equals "References:" | verify-true
    }
    with [get-control Any -after [get-label "Test Element Element2"] -index 6] {
        get-property "getChildren().Control[0].getChildren().Control[0].getClassName()" 
            | equals "org.eclipse.swt.widgets.Table" | verify-true
        get-property "getChildren().Control[0].getChildren().Control[0].getItems().TableItem[0].getText()" 
            | equals "Test Element Element2" | verify-true
        get-property "getChildren().Control[0].getChildren().Control[0].getItems().TableItem[1].getText()" 
            | equals "Test Element Element3" | verify-true
    }
    with [get-control Any -after [get-label "Test Element Element2"] -index 13] {
        get-property "getChildren().Control[0].getClassName()" | equals "org.eclipse.swt.widgets.Button" | verify-true
        get-property "getChildren().Control[1].getClassName()" | equals "org.eclipse.swt.widgets.Button" | verify-true
        get-property "getChildren().Control[2].getClassName()" | equals "org.eclipse.swt.widgets.Button" | verify-true
        get-property "getChildren().Control[3].getClassName()" | equals "org.eclipse.swt.widgets.Button" | verify-true
        get-property "getChildren().Control[4].getClassName()" | equals "org.eclipse.swt.widgets.Button" | verify-true
    }
}
